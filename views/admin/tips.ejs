<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Tips | Wellness AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gradient-to-br from-gray-100 to-blue-200 min-h-screen">
    <div class="max-w-3xl mx-auto py-10">
      <h1 class="text-2xl font-bold text-blue-700 mb-6">Tip Management</h1>
      <table class="w-full bg-white rounded-xl shadow mb-8">
        <thead>
          <tr class="bg-blue-100">
            <th class="py-2 px-4 text-left">Content</th>
            <th class="py-2 px-4 text-left">User</th>
            <th class="py-2 px-4">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tips.forEach(t => { %>
          <tr class="border-b last:border-b-0">
            <td class="py-2 px-4"><%= t.content %></td>
            <td class="py-2 px-4"><%= t.user ? t.user.name : 'N/A' %></td>
            <td class="py-2 px-4 text-center">
              <form
                action="/admin/tips/<%= t._id %>/delete"
                method="POST"
                class="inline"
              >
                <button class="text-red-600 hover:underline">Delete</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/admin/dashboard" class="text-blue-600 hover:underline"
        >Back to Admin Dashboard</a
      >
    </div>
  </body>
</html>
