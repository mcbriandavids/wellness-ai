<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard | Wellness AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen bg-gradient-to-tr from-gray-900 to-blue-900 flex">
    <!-- Sidebar -->
    <aside
      class="w-64 bg-gray-800 text-white flex flex-col py-8 px-6 min-h-screen"
    >
      <div class="flex items-center mb-10">
        <div
          class="w-12 h-12 rounded-full bg-blue-600 flex items-center justify-center text-2xl font-bold mr-3"
        >
          A
        </div>
        <div>
          <div class="font-bold text-lg">Admin</div>
          <div class="text-xs text-blue-200">Superuser</div>
        </div>
      </div>
      <nav class="flex-1 space-y-4">
        <a
          href="/admin/dashboard"
          class="block py-2 px-3 rounded-lg bg-blue-700 font-semibold"
          >Dashboard</a
        >
        <a
          href="/admin/users"
          class="block py-2 px-3 rounded-lg hover:bg-blue-700"
          >Users</a
        >
        <a
          href="/admin/tips"
          class="block py-2 px-3 rounded-lg hover:bg-blue-700"
          >Tips</a
        >
      </nav>
      <div class="mt-auto">
        <a
          href="/dashboard"
          class="block py-2 px-3 rounded-lg bg-gray-700 hover:bg-gray-600 text-center"
          >User View</a
        >
        <a
          href="/logout"
          class="block py-2 px-3 rounded-lg bg-red-600 hover:bg-red-700 text-center mt-2"
          >Logout</a
        >
      </div>
    </aside>
    <!-- Main Content -->
    <main class="flex-1 p-10">
      <h1
        class="text-4xl font-extrabold text-white mb-8 flex items-center gap-3"
      >
        <svg
          class="w-8 h-8 text-blue-400"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3 7v10a4 4 0 004 4h10a4 4 0 004-4V7a4 4 0 00-4-4H7a4 4 0 00-4 4z"
          />
        </svg>
        Admin Dashboard
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-10">
        <div
          class="bg-blue-800 rounded-2xl shadow-lg p-8 flex flex-col items-center"
        >
          <div class="text-blue-200 text-lg mb-2">Total Users</div>
          <div class="text-4xl font-extrabold text-white"><%= userCount %></div>
        </div>
        <div
          class="bg-blue-800 rounded-2xl shadow-lg p-8 flex flex-col items-center"
        >
          <div class="text-blue-200 text-lg mb-2">Total Tips</div>
          <div class="text-4xl font-extrabold text-white"><%= tipCount %></div>
        </div>
        <div
          class="bg-blue-700 rounded-2xl shadow-lg p-8 flex flex-col items-center"
        >
          <div class="text-blue-200 text-lg mb-2">Quick Links</div>
          <a
            href="/admin/users"
            class="text-white font-semibold hover:underline"
            >Manage Users</a
          >
          <a
            href="/admin/tips"
            class="text-white font-semibold hover:underline mt-2"
            >Manage Tips</a
          >
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white rounded-2xl shadow p-6">
          <h2 class="text-lg font-bold text-blue-800 mb-2">Recent Users</h2>
          <ul>
            <% users.forEach(u => { %>
            <li
              class="py-1 border-b last:border-b-0 flex justify-between items-center"
            >
              <span><%= u.name %> (<%= u.email %>)</span>
              <% if (u.isAdmin) { %><span
                class="text-xs bg-blue-200 text-blue-800 px-2 py-1 rounded"
                >Admin</span
              ><% } %>
            </li>
            <% }) %>
          </ul>
        </div>
        <div class="bg-white rounded-2xl shadow p-6">
          <h2 class="text-lg font-bold text-blue-800 mb-2">Recent Tips</h2>
          <ul>
            <% tips.forEach(t => { %>
            <li class="py-1 border-b last:border-b-0"><%= t.content %></li>
            <% }) %>
          </ul>
        </div>
      </div>
    </main>
  </body>
</html>
